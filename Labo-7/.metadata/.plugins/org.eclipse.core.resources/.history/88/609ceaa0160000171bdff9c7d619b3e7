#include "Complexe.h"
#include <sstream>

using namespace std;

namespace labo
{

Complexe::Complexe(double re, double im) :
		m_re(re), m_im(im)
{
}

ostream& operator<<(ostream& os, const Complexe& z)
{
	os << z.reqComplexeFormate();
	return os;
}

string Complexe::reqComplexeFormate() const
{
	ostringstream os;
	os << m_re;
	if (m_im >= 0)
	{
		os << " + " << m_im;
	}
	else
	{
		os << " - " << -m_im;
	}

	os << "i";
	return os.str();
}

}

Complexe labo::Complexe::operator +(const Complexe&) const
{
}
/* namespace labo */
