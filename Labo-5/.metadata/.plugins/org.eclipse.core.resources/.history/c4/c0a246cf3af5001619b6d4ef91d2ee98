#ifndef TEMPS_H_
#define TEMPS_H_

#include <string>

namespace Temps2
{

/**
 * \class Temps
 */
class Temps
{
public:
	Temps();
	Temps(int, int, int);
	~Temps();

	std::string reqTempsFormate() const;

	static int reqNombreInstances();

	virtual ~Temps();
	int reqHeure() const;
	void asgHeure(int heure);
	int reqMinute() const;
	void asgMinute(int minute);

private:
	int m_heure;
	int m_minute;
	static int nombreInstances;

};
}
#endif /* TEMPS_H_ */
