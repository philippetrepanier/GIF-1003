#include "validationFormat.h"
#include <iostream>
#include <typeinfo>

using namespace std;

bool validerTelephone(const string& p_telephone)
{
	cout << "Longueur de la chaine : " << p_telephone.size() << endl;

	int i = 0;
	for (string::const_iterator lettre = p_telephone.begin(), end = p_telephone.end(); lettre != end; ++lettre, ++i)
	{
		if (i == 3)
		{
			//espace
		}
		else if (i == 7)
		{
			//-
		}
		else
		{
			//else
		}

		cout << "Un char: " << *lettre << " | " << i << endl;
		if (*lettre == ' ')
		{
			cout << "ESPACE" << endl;
		}
	}

	return false;
}

