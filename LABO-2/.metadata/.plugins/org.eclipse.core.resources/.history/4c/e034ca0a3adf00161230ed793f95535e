#include <iostream>
using namespace std;

int main() {
	int nombrelignes;
	cout << "Veuillez entrer un nombre: " << endl;
	cin >> nombrelignes;

	for (int i = 1; i <= nombrelignes; i++) {
		for (int espaces = 0; i <= (nombrelignes - i); i++) {
			cout << "Nombre: " << espaces << endl;
		}
		cout << "Nombre lignes: " << i << endl;
	}

}

